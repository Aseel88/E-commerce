<%- include('headerWithoutCategories.ejs') -%>
    <script>
          
    </script>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src=".." class="img-fluid rounded-start" alt="..">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
              <p class="card-text">Category: <%= product.category.name %></p>
              <p class="card-text">Number In Stock: <%= product.numberInStock %></p>
              <p class="card-text">Daily Order Rate: <%= product.dailyOrderRate %></p>
              <p class="card-text">Price: <%= product.price %> $</p>

              <div class="btn-group">
                <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Size
                </button>
                <ul class="dropdown-menu">
                  <li> 1</li>
                  <li> 2</li>
                  <li> 3</li>
                  <li> 4</li>
                </ul>
              </div>
              <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
            </div>
          </div>
        </div>
      </div>

    <div>
      <button type="submit" class="btn btn-primary" onclick="addToCart('<%= product.id %>')" >Add to basket</button>
    </div>
